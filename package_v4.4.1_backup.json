{
  "name": "shanktuary-golf-mini-games",
  "version": "4.4.1",
  "description": "Shanktuary Golf Mini Games",
  "main": "electron-main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "flightscope": "node flightscope-query.js"
  },
  "author": "Shanktuary Golf",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.shanktuary.golf-mini-games",
    "productName": "Shanktuary Golf Mini Games",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules/**/*",
      "node_modules/cannon-es/dist/cannon-es.cjs.js",
      "!dist/**/*",
      "!build/**/*",
      "!server/**/*",
      "!remote_connector_v2.py",
      "!*.md",
      "!logs/**/*"
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "electronlogo.png"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "electronlogo.png",
      "category": "public.app-category.games"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "icon": "electronlogo.png",
      "category": "Game"
    }
  },
  "dependencies": {
    "cannon-es": "^0.20.0",
    "three": "^0.180.0",
    "puppeteer": "^21.0.0"
  }
}
