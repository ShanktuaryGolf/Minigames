{
  "name": "shanktuary-golf-mini-games",
  "version": "4.15.4",
  "description": "Shanktuary Golf Mini Games",
  "main": "electron-main.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/ShanktuaryGolf/Minigames.git"
  },
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "publish": "electron-builder --win --publish always",
    "flightscope": "node flightscope-query.js",
    "rebuild": "electron-rebuild -f -w steamworks.js",
    "postinstall": "electron-rebuild -f -w steamworks.js || echo 'Steam SDK not installed - running in offline mode'"
  },
  "author": "Shanktuary Golf",
  "license": "MIT",
  "devDependencies": {
    "@electron/rebuild": "^4.0.3",
    "electron": "^40.1.0",
    "electron-builder": "^26.6.0"
  },
  "build": {
    "appId": "com.shanktuary.golf-mini-games",
    "productName": "Shanktuary Golf Mini Games",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!dist/**/*",
      "!build/**/*",
      "!server/**/*",
      "!remote_connector_v2.py",
      "!*.md",
      "!logs/**/*",
      "!node_modules/puppeteer/**/*",
      "!.beads/**/*"
    ],
    "asarUnpack": [
      "node_modules/electron-updater/**/*",
      "node_modules/steamworks.js/**/*"
    ],
    "publish": [
      {
        "provider": "github",
        "owner": "ShanktuaryGolf",
        "repo": "Minigames",
        "releaseType": "release"
      }
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "electronlogo.png",
      "verifyUpdateCodeSignature": false
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "electronlogo.png",
      "category": "public.app-category.games"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "icon": "electronlogo.png",
      "category": "Game"
    }
  },
  "dependencies": {
    "@capacitor/android": "^7.4.4",
    "@capacitor/cli": "^8.0.2",
    "@capacitor/core": "^7.4.4",
    "3d-tiles-renderer": "^0.4.19",
    "bonjour-service": "^1.3.0",
    "cannon-es": "^0.20.0",
    "electron-updater": "^6.6.2",
    "puppeteer": "^24.36.1",
    "three": "^0.180.0"
  },
  "optionalDependencies": {
    "steamworks.js": "^0.3.2"
  }
}
